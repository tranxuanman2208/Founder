<Window x:Class="MapShortestPath.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin địa điểm" Height="450" Width="600" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="TxtName" Text="Tên Địa Điểm" FontSize="24" FontWeight="Bold" Foreground="#007ACC" Margin="0,0,0,10"/>
            <TextBlock x:Name="TxtAddress" Text="Địa chỉ..." FontSize="14" FontStyle="Italic" Foreground="Gray" Margin="0,0,0,20"/>
            <Border BorderBrush="LightGray" BorderThickness="1" Height="300">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="TxtContent" Text="Nội dung chi tiết..." Margin="10" TextWrapping="Wrap" FontSize="16"/>
                </ScrollViewer>
            </Border>
            <Button Content="Đóng" Width="100" Margin="0,10,0,0" Click="Button_Click" Height="30"/>
        </StackPanel>
    </Grid>
</Window>